#include <iostream>
using namespace std;

int main() {

//define some vars
	double km;
	double fuel;
	double result;
//get info
	cout<<"Enter the kilometer you drove"<<endl;
	cin>>km;
	cout<<"Enter the used fuel"<<endl;
	cin>>fuel;
//check for valid data
	if (fuel <=0){

	cout<<"Nope, you can´t do this, please enter valid Data."<<endl;
	cout<<"The program ends here."<<endl;
	return 0;
	}
	else
	{
//calculate and console output
		result = fuel/km*100;
		cout<<"You drove "<<km<<"km."<<endl<<"You used "<<fuel<<"l"<<endl;
		cout<<"You used "<<result<<" l/100km"<<endl;
	}
	return 0;
}
