double use;
double km;
double usekm;

int main() {
	cout << "Please enter fuel use"<<endl;
	cin>>use;
	cout <<"Please enter the amount of kilometer you have driven"<<endl;
	cin>>km;
usekm =	(use/km)*100;
	cout<<"The fuel use per 100Km is "<<usekm<<endl;

	return 0;
}
